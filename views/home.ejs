<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WhatsApp Bot</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
</head>
<body class="p-8">
    <div class="container mx-auto">
        <h1 class="text-2xl font-bold mb-4">WhatsApp Bot Dashboard</h1>

        <% if (connectionInfo === 'Disconnected') { %>
            <div class="mb-4">
                <h2 class="text-xl font-semibold">Scan the QR Code to Connect</h2>
                <% if (qr) { %>
                    <img id="qr-code" src="<%= qr %>" alt="QR Code" class="w-64 h-64 border border-gray-300 rounded-md">
                <% } else { %>
                    <p>Generating QR code...</p>
                <% } %>
            </div>
        <% } else { %>
            <div class="mb-4">
                <h2 class="text-xl font-semibold">Connection Status</h2>
                <p><%= connectionInfo %></p>
            </div>
        <% } %>

        <form action="/logout" method="post" class="mt-4">
            <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded">Logout</button>
        </form>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();

        socket.on('qr', (url) => {
            document.getElementById('qr-code').src = url;
        });

        socket.on('connection-info', (info) => {
            document.querySelector('p').textContent = info;
        });
    </script>
</body>
</html>
